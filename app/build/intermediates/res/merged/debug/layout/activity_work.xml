<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.y_knot.work"
    android:background="@drawable/newbg1_blur1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0"
        >
        <LinearLayout
            android:id="@+id/header"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#2E3192">


            <TextView
                android:id="@+id/knot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/knot"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_marginLeft="6dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight=".4"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workImg" />


    </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight=".6">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/buttonGrid"

            >


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cleaning_button"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/cleaning_press"
                android:onClick="goClean"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/moving_press"
                 />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/pickup_press"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/handyman_press" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/office_press"
                 />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/other_press" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_button1"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/cleaning_press"
                android:onClick="goClean"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_button2"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/cleaning_press"
                android:onClick="goClean"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_button3"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@drawable/cleaning_press"
                android:onClick="goClean"/>

        </GridLayout>
            </ScrollView>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
